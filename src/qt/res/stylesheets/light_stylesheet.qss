/* general */

QMainWindow {
    background-image:url(:images/bkg);
    border:none;
    font-family:'Open Sans';
}

BitcoinAmountField{
    background-color: rgb(200,200,200);
}

QToolButton {
    color: black;
    background-color: qlineargradient(x1: 0, y1: 0, x2: 1.0, y2: 1.0,stop: 0 rgb(200,200,200), stop: 1 rgb(200,200,200));
    border:none;
}

QToolButton:hover {
    background-color:qlineargradient(x1: 0, y1: 0, x2: 1.0, y2: 1.0,stop: 0 rgb(160,175,5), stop: 1 rgb(160,175,5));
    color:white;
    border:none;
}

QToolButton:checked {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 1.0, y2: 1.0,stop: 0 rgb(150,150,150), stop: 1 rgb(150,150,150));
    border:none;
}

QToolButton:checked:hover {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 1.0, y2: 1.0,stop: 0 rgb(160,175,5), stop: 1 rgb(160,175,5));
    border:none;
}

QMenuBar {
    background: rgba(200,200,200,25%);
    color: black;
    border-bottom : 0.125em solid rgb(160,175,5);
}

QMenuBar::item {
    padding-bottom:0.5em;
    padding-top:0.5em;
    padding-left:1em;
    padding-right:1em;
    color: black;
    background-color: transparent;
}

QMenuBar::item:selected {
    background-color:rgb(160,175,5);
    color: white;
}

QMenu {
    background: rgb(200,200,200);
    color: black;
    padding-bottom:0.625;
}

QMenu::item {
    color: black;
    background-color: transparent;
}

QMenu::item:selected {
    background-color:rgb(160,175,5);
    color:white;
}

/* horizontal scrollbar */

QScrollBar:horizontal {
    background: rgb(200,200,200);
    height: 0.625em;
    margin: 0 0 0 0;
}

QScrollBar::handle:horizontal {
    background: rgb(150,150,150);
    border: 0.065em rgb(150,150,150);
    border-radius: 0.19em;
    min-width: 1.25wm;
}

QScrollBar::handle:horizontal:hover {
    background: rgb(160,175,5);
    border: 0.065em rgb(160,175,5);
    border-radius: 0.19em;
    min-width: 1.25em;
}

QScrollBar::add-line:horizontal {
      border: none;
      background-color: transparent;
      width: 0;
      height: 0;
}

QScrollBar::sub-line:horizontal {
      border: none;
      background-color: transparent;
      width: 0;
      height: 0;
}

/* vertical scrollbar */

QScrollBar:vertical {
    background: rgb(200,200,200);
    width: 0.625em;
    margin: 0 0 0 0;
}

QScrollBar::handle:vertical {
    background: rgb(150,150,150);
    border: 0.065em rgb(150,150,150);
    border-radius: 0.19em;
    min-height: 1.25em;
}

QScrollBar::handle:vertical:hover {
    background: rgb(160,175,5);
    border: 0.065em rgb(160,175,5);
    border-radius: 0.19em;
    min-height: 1.25em;
}

QScrollBar::add-line:vertical {
      border: none;
      background-color: transparent;
      width: 0;
      height: 0;
}

QScrollBar::sub-line:vertical {
      border: none;
      background-color: transparent;
      width: 0;
      height: 0;      
}

QToolTip {
    color: black;
    background-color: rgb(200,200,200);
    border: none;
}


QTableView{
    background-color: transparent; 
    color:black; 
    alternate-background-color:white;
} 

QTableView::item{
    background-color: transparent;
    color:black;
}

QTableView::item:selected{
    background-color: rgb(160,175,5);
    color:white;
}

QTableView::item:hover{
    background-color: rgb(160,175,5);
    color:white;
}

QHeaderView{
    background-color: rgb(200,200,200);
}

QHeaderView::section { 
    background-color:rgb(200,200,200);
    color:black; 
} 

QHeaderView::section:hover {
    background-color:rgb(160,175,5);
    color:white;
}

QComboBox { 
    background-color:rgb(200,200,200);
    color: black; 
    selection-color: white;
    selection-background-color:rgb(160,175,5);
    padding: 0.065em 0em 0.065em 0.19em;
} 

QComboBox:!editable:hover,
QComboBox::drop-down:!editable:hover
{
    background-color:rgb(160,175,5);
    color: white;
}

QComboBox:selected {
    background-color:rgb(160,175,5);
    color: white;
}

QComboBox QAbstractItemView {
    background-color:rgb(200,200,200);
    color: black; 
}

QAbstractItemView::item:selected {
    background-color:rgb(160,175,5);
    color: white;
}

QAbstractItemView::item:checked {
    background-color:rgb(160,175,5);
    color: white;
}

QLineEdit { 
    background-color:rgb(200,200,200);
    color: black; 
    selection-color: white;
    selection-background-color:rgb(160,175,5);
} 

QDateTimeEdit { 
    background-color:rgb(200,200,200);
    color: black; 
} 

QDateTimeEdit QAbstractItemView {
    background-color:rgb(200,200,200);
    color: black;
}

QDateTimeEdit QAbstractItemView::item:checked {
    background-color:rgb(160,175,5);
    color: white;
}

QDateTimeEdit QAbstractItemView::item:selected {
    background-color:rgb(160,175,5);
    color: white;
}

QDialog{
    background-image: url(:/images/bkg);
}

QWidget{
    color: black;
}

QWidget:focus{
    border: 0.065em solid rgb(160,175,5);
}

QPushButton{
    background-color: rgb(200,200,200);
}

QPushButton:selected{
    background-color: rgb(160,175,5);
    color: white;
}

QPushButton:hover{
    background-color: rgb(160,175,5);
    color: white;
}

QPushButton:focus{
    background-color: rgb(200,200,200);
    color: black;
    border: 0.065em solid rgb(160,175,5);
}

QTreeWidget{
    color: rgb(0,0,0); 
    background-color: transparent;
    alternate-background-color: white;
}

QListView { 
    background: transparent;
    alternate-background-color: white;
}

QListView::item {
    background-color:transparent;
    color:black;
}

QListView::item:selected {
    background-color:rgb(160,175,5);
    color:white;
}

QListView::item:checked {
    background-color:rgb(160,175,5);
    color:white;
}

QDoubleSpinBox{
    background-color: rgb(200,200,200);
}

QTabWidget{
    background-color: transparent;    
}

QTabWidget::pane {  /* The tab widget frame */
    border: 0.065em solid rgb(100,100,100);
} 

QTabBar::tab {
    background: rgb(150,150,150);
    border: 0.065em solid rgb(100,100,100);
    min-height:1.25em;
    min-width: 0.5em;
    padding: 0.125em;
}

QTabBar::tab:selected {
    background: rgb(200,200,200);
    border: 0.065em solid rgb(100,100,100);
    border-bottom-color: rgb(200,200,200);
}

QTabBar::tab:hover {
    background: rgb(160,175,5);
    color: white;
}

QTabBar::tab:!selected {
    margin-top: 0.18em;  /* make non-selected tabs look smaller */
}

QTextEdit{
    background-color: transparent;
}

QPlainTextEdit{
    background-color: transparent;
}

QGroupBox{
    background-color: transparent;
}

QListWidget{
    color:black; 
    background-color:transparent;
} 

/* Main Window*/

#toolbar {
    border:none;
    padding-top:1.25em;
    min-width:8em;
    height:100%;    
    background: transparent;
    color: black;
}

#toolbar2 {
    border:none;
    width:1.625em;
    background-color:qlineargradient(x1: 0, y1: 0, x2: 0.5, y2: 0.5,stop: 0 rgb(160,175,5), stop: 1 rgb(160,175,5));
    min-width:1.625em;
    max-width:1.625em;
}

#toolbar3 {
    border:none;
    background-color:transparent;
    border-bottom : 0.125em solid rgb(160,175,5);
    min-height:3.25em;
    max-height:3.25em;
}

QToolBar#toolbar QToolButton {
    padding-left:1em;
    padding-right:1em;
    padding-top:0.5em;
    padding-bottom:0.5em;
    margin:0.25em;
    width:100%;
}

QToolBar#toolbar2 QLabel{
    border:none;
    padding-top:1em;
    padding-bottom:1em;
    qproperty-alignment: AlignCenter;
}

QToolBar#toolbar3 QLabel{
    margin:0.5em;
}

#spacer {
    background-color:transparent;
    border:none;
}

